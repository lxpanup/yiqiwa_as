<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.activities.chuzhu.CZDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ff00d98b">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="二手出售"
                android:textColor="#fff"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/img_head_share"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@mipmap/ic_fenxiang" />


            <ImageView
                android:id="@+id/img_head_collect"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/img_head_share"
                android:layout_toLeftOf="@+id/img_head_share"
                android:scaleType="center"
                android:src="@mipmap/ic_head_shouchang" />

        </RelativeLayout>

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_sfzy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:src="@mipmap/ic_detail_head_1" />

                        <ImageView
                            android:id="@+id/img_detail"
                            android:layout_width="match_parent"
                            android:layout_height="216dp"
                            android:scaleType="fitXY"></ImageView>
                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp">

                        <TextView
                            android:id="@+id/txt_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff222222"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/txt_product_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/txt_product_name"
                            android:text=""
                            android:textColor="#ff222222"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txt_product_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/txt_product_time"
                            android:layout_alignParentRight="true"
                            android:text="浏览量 ：20"
                            android:textColor="#ff222222"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/txt_product_num"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toStartOf="@+id/txt_product_num"
                            android:layout_toLeftOf="@+id/txt_product_num"
                            android:src="@mipmap/ic_look" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_city_head"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_tab_detail"
                            android:text="成都市" />


                        <TextView
                            android:id="@+id/txt_head_01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_tab_detail"
                            android:text="2019" />



                        <TextView
                            android:id="@+id/txt_head_02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/bg_tab_detail"
                            android:text="2019" />





                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出租价格"
                            android:textColor="#ff222222"
                            android:textSize="16sp"
                            />

                        <LinearLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/txt_product_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥00.00"
                                android:textColor="#ffff0000"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元/时"
                                android:textColor="#ff222222"
                                android:textSize="12sp"
                                />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider_main_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:background="#FFF">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="产品参数"
                        android:textColor="#ff222222"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_postage"
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="品牌型号"
                                android:textColor="#222222"
                                android:gravity="center"
                                android:background="#fff8f8f8"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/txt_cs_01"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#ff222222"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="设备类型"
                                android:textColor="#222222"
                                android:gravity="center"
                                android:background="#fff8f8f8"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/txt_cs_02"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#ff222222"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="排放标准"
                                android:textColor="#222222"
                                android:gravity="center"
                                android:background="#fff8f8f8"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/txt_cs_03"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#ff222222"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="40dp"
                                android:text="铲斗容量"
                                android:textColor="#222222"
                                android:gravity="center"
                                android:background="#fff8f8f8"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/txt_cs_04"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text=""
                                android:textColor="#ff222222"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:text="进场时间"
                                android:textColor="#222222"
                                android:gravity="center"
                                android:background="#fff8f8f8"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/txt_cs_05"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="2019-08-15"
                                android:textColor="#ff222222"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="90dp"
                                android:layout_height="40dp"
                                android:text="付款方式"
                                android:textColor="#222222"
                                android:gravity="center"
                                android:background="#fff8f8f8"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/txt_cs_06"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="月付"
                                android:textColor="#ff222222"
                                android:textSize="12sp"
                                />

                        </LinearLayout>

                    </LinearLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/divider_main_color" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:paddingTop="5dp"
                            android:paddingLeft="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="需求说明"
                            android:textColor="#ff222222"
                            android:textSize="14sp" />


                            <TextView
                                android:id="@+id/txt_xqsm"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_margin="10dp"
                                android:padding="5dp"
                                android:text="2016年维修过，最近无事做出售挖掘机"
                                android:background="@drawable/bg_gay_border"/>

                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="6dp"
                    android:background="@color/divider_main_color" />



            </LinearLayout>

        </ScrollView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_main_color" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:drawableTop="@mipmap/ic_phone"
                android:drawablePadding="2dp"
                android:gravity="center_horizontal"
                android:text="电话"
                android:textColor="@color/font_black_color"
                android:textSize="13sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/divider_main_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:drawableTop="@mipmap/ic_zixun"
                android:drawablePadding="2dp"
                android:gravity="center_horizontal"
                android:text="咨询"
                android:textColor="@color/font_black_color"
                android:textSize="13sp" />



            <TextView
                android:id="@+id/tv_buyer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#00D98B"
                android:gravity="center"
                android:text="我要出售"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
