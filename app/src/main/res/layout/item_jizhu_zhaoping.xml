<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lil_item_product"
    android:layout_gravity="center_vertical"
    android:padding="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher_round" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:text="张三"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt_cart_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我就找最牛逼的老司机"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#ff000000"
                android:textSize="16sp"
                />



            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                android:src="@mipmap/ic_phone_1"/>



            <TextView
                android:id="@+id/txt_cart_product_type"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/txt_cart_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="联系电话：1863596****"
                android:textColor="#ff222222"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_qiwangxingzhi"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/txt_cart_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="期望薪资：7000-9000"
                android:textColor="#ff222222"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_below="@+id/txt_qiwangxingzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff222222"
                    android:textSize="12sp"
                    android:text="综合评价："/>



                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/ratingSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="3"
                    android:layout_weight="1" />
            </LinearLayout>


            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="5dp"
                android:gravity="center"
                android:background="@drawable/btn_green_login"
                android:text="发送消息"/>

        </RelativeLayout>


    </LinearLayout>
</LinearLayout>