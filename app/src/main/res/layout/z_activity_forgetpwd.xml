<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff00d98b">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="忘记密码"
            android:textColor="#fff"
            android:textSize="18sp"
            />

    </RelativeLayout>







         <!--注册-->
        <LinearLayout
            android:id="@+id/lil_login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:background="@drawable/bg_write_border">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/edit_write_in_gray"
                android:layout_height="43dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_login_user"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:padding="1dp"/>

                <EditText
                    android:id="@+id/edt_register_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:paddingLeft="38dp"
                    android:textColor="@color/black"
                    android:inputType="phone"
                    android:hint="请输入手机号码"
                    android:background="@null"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="43dp">



                <TextView
                    android:id="@+id/txt_yanzhengma"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btn_orange_login"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="验证码"/>


                <EditText
                    android:id="@+id/edt_register_yanzhengma"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toStartOf="@+id/txt_yanzhengma"
                    android:layout_toLeftOf="@+id/txt_yanzhengma"
                    android:background="@drawable/edit_write_in_gray"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="38dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_yanzhengma"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:padding="1dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/edit_write_in_gray"
                android:layout_marginTop="10dp"
                android:layout_height="43dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_login_password"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:padding="1dp"/>



                <EditText
                    android:id="@+id/edit_register_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:hint="请输入密码"
                    android:paddingLeft="38dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/edit_write_in_gray"
                android:layout_marginTop="10dp"
                android:layout_height="43dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_login_password"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitCenter"
                    android:padding="1dp"/>



                <EditText
                    android:id="@+id/edt_register_confirm_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:hint="确认密码"
                    android:paddingLeft="38dp" />

            </RelativeLayout>



            <TextView
                android:id="@+id/txt_register"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/btn_green_login"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="提 交" />

        </LinearLayout>




</RelativeLayout>