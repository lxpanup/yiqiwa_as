<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lil_item_message"
    android:layout_gravity="center_vertical"
    android:padding="3dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人"
        android:layout_marginLeft="50dp"
        android:textColor="#ff222222"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="95dp"
            android:layout_height="105dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/test_wjj" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/txt_cart_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="龙工2019机型大型挖掘机"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#ff000000"
                android:textSize="18sp"
                />



            <TextView
                android:id="@+id/txt_cart_product_type"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txt_cart_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text="四川成都   |  2015  |  3000h"
                android:textColor="#ff222222"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/lil_amount_postion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="bottom"
                android:layout_below="@+id/txt_cart_product_type">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#ffff0000"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200.00"
                    android:textColor="#ffff0000"
                    android:textSize="19sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元/天"
                    android:textColor="#ff000000"
                    android:textSize="13sp"
                    />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="7dp"
                        android:paddingRight="7dp"
                        android:background="@drawable/bg_tab_detail"
                        android:textColor="#222222"
                        android:text="200" />


                    <LinearLayout
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:background="@drawable/bg_tab_detail">
                        <Spinner
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:entries="@array/date_dange">

                        </Spinner>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@+id/lil_amount_postion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计总金额：400.00元"
                android:textColor="#222222"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>