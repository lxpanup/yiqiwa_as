<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".ui.activities.chuzhu.CZDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#ff00d98b">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@mipmap/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="出租详情"
                android:textColor="#fff"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/img_head_share"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@mipmap/ic_fenxiang" />


            <ImageView
                android:id="@+id/img_head_collect"
                android:layout_width="40dp"
                android:layout_height="41dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/img_head_share"
                android:layout_toLeftOf="@+id/img_head_share"
                android:scaleType="center"
                android:src="@mipmap/ic_head_shouchang" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
