<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lil_item_product"
    android:layout_gravity="center_vertical"
    android:padding="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageview"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY" />
            <!--<ImageView-->
                <!--android:id="@+id/img_type"-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="15dp"-->
                <!--android:src="@mipmap/ic_jingxuan"/>-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/txt_cart_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#ff00d98b"
                android:padding="2dp"
                android:text=""/>


            <TextView
                android:id="@+id/txt_cart_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_toStartOf="@+id/txt_cart_status"
                android:text=""
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#ff000000"
                android:textSize="16sp"
                />





            <TextView
                android:id="@+id/txt_cart_product_type"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/txt_cart_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:text=""
                android:textColor="#ff222222"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/lil_product_stutas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/txt_cart_product_type">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="状态:"
                    android:textColor="#ff222222"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_product_stutas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text=""
                    android:textColor="#ff00d98b"
                    android:textSize="14sp" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/lil_amount_postion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_gravity="bottom"
                android:layout_below="@+id/lil_product_stutas">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总金额:"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/txt_zongjinge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00.00"
                    android:textColor="#ffff0000"
                    android:textSize="19sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#ff000000"
                    android:textSize="13sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="right|bottom">

                    <TextView
                        android:id="@+id/txt_gengjing"
                        android:layout_width="55dp"
                        android:visibility="gone"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/btn_green_login"
                        android:text="跟进"/>


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>