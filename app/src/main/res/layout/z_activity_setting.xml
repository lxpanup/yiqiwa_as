<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff00d98b">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/ic_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设 置"
            android:textColor="#fff"
            android:textSize="18sp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.ssd.yiqiwa.widget.common.MyNavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mnbv_setting_01"
            mine:icon="@mipmap/ic_setting_01"
            mine:hint="修改资料"
            android:background="@drawable/selector_mine" >
        </com.ssd.yiqiwa.widget.common.MyNavBarView>

        <com.ssd.yiqiwa.widget.common.MyNavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mnbv_setting_02"
            mine:icon="@mipmap/ic_setting_02"
            mine:hint="修改密码"
            android:background="@drawable/selector_mine" >
        </com.ssd.yiqiwa.widget.common.MyNavBarView>

        <com.ssd.yiqiwa.widget.common.MyNavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mnbv_setting_03"
            mine:icon="@mipmap/ic_setting_03"
            mine:hint="忘记密码"
            android:background="@drawable/selector_mine" >
        </com.ssd.yiqiwa.widget.common.MyNavBarView>

        <com.ssd.yiqiwa.widget.common.MyNavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mnbv_setting_04"
            mine:icon="@mipmap/ic_setting_03"
            mine:hint="意见反馈"
            android:background="@drawable/selector_mine" >
        </com.ssd.yiqiwa.widget.common.MyNavBarView>



        <com.ssd.yiqiwa.widget.common.MyNavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:id="@+id/mnbv_setting_05"
            mine:icon="@mipmap/ic_setting_04"
            mine:hint="清除缓存"
            android:background="@drawable/selector_mine" >
        </com.ssd.yiqiwa.widget.common.MyNavBarView>

        <com.ssd.yiqiwa.widget.common.MyNavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mnbv_setting_06"
            mine:icon="@mipmap/ic_setting_05"
            mine:hint="关于"
            android:background="@drawable/selector_mine" >
        </com.ssd.yiqiwa.widget.common.MyNavBarView>

        <com.ssd.yiqiwa.widget.common.MyNavBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mnbv_setting_07"
            mine:icon="@mipmap/ic_setting_06"
            mine:hint="版本信息"
            android:background="@drawable/selector_mine" >
        </com.ssd.yiqiwa.widget.common.MyNavBarView>

        <LinearLayout
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_height"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/tou"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:src="@mipmap/ic_setting_07" />


            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textSize="16sp"
                android:layout_marginRight="3dp"
                android:text="通知与提醒" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_height"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@color/white"
            android:text="退出登录"/>

    </LinearLayout>


</LinearLayout>