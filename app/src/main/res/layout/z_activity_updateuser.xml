<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mine="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ff00d98b">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="40dp"
            android:layout_height="41dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="2dp"
            android:scaleType="center"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改个人资料"
            android:textColor="#fff"
            android:textSize="18sp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_write_boder_2"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#ff000000"
                    android:layout_marginRight="18dp"
                    android:textSize="18sp"
                    android:text="头 像"/>


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@mipmap/ic_head_img"/>


        </RelativeLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="姓名"
                android:gravity="center_vertical"
                android:textColor="#ff000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:hint="请填写联系人"
                android:background="@drawable/bg_edit_publish"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="联系人"
                android:gravity="center_vertical"
                android:textColor="#ff000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/edt_publish_04"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:hint="请填写联系人"
                android:background="@drawable/bg_edit_publish"/>
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#fff">
            <TextView
                android:id="@+id/txt_publish_04"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="出生年月"
                android:gravity="center_vertical"
                android:textColor="#ff000000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:hint="请填写联系人"
                android:background="@drawable/bg_edit_publish"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/btn_green_login"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="提 交" />
    </LinearLayout>



</LinearLayout>